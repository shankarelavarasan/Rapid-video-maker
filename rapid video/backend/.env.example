# Rapid Video Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Rapid Video API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For development (SQLite)
DATABASE_URL=sqlite:///./rapid_video.db

# For production (PostgreSQL on Render)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# =============================================================================
# REDIS CONFIGURATION (for production)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================
# Your Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Path to your service account JSON file
# Download from Google Cloud Console > IAM & Admin > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=./path/to/your/service-account-key.json

# =============================================================================
# GOOGLE AI API CONFIGURATION
# =============================================================================
# Get from Google AI Studio: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Your Google Cloud Project for Vertex AI
VERTEX_AI_PROJECT=your-project-id
VERTEX_AI_LOCATION=us-central1

# =============================================================================
# VEO 3 API CONFIGURATION
# =============================================================================
# Get from Veo 3 API provider
VEO_API_KEY=your-veo-api-key-here
VEO_API_URL=https://api.veo.ai/v1

# =============================================================================
# BANANA.DEV CONFIGURATION
# =============================================================================
# Get from Banana.dev dashboard
BANANA_API_KEY=your-banana-api-key-here
BANANA_MODEL_KEY=your-banana-model-key-here

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Set to true for production with Google Cloud Storage
USE_CLOUD_STORAGE=false

# Your Google Cloud Storage bucket name
GCS_BUCKET_NAME=your-bucket-name

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
# Maximum file size in bytes (100MB)
MAX_FILE_SIZE=104857600

# Maximum video duration in seconds (3 minutes)
MAX_VIDEO_DURATION=180

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
# Duration of each scene in seconds
SCENE_DURATION=8

# Maximum concurrent processing jobs
MAX_CONCURRENT_JOBS=5

# =============================================================================
# FFMPEG CONFIGURATION
# =============================================================================
# Path to FFmpeg executable (use 'ffmpeg' if in PATH)
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Change this to a secure random string in production
SECRET_KEY=your-super-secret-key-change-in-production

# JWT token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
# Update with your actual frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-github-pages-url.github.io

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# =============================================================================
# VIDEO OUTPUT CONFIGURATION
# =============================================================================
OUTPUT_VIDEO_CODEC=libx264
OUTPUT_VIDEO_BITRATE=2M
OUTPUT_AUDIO_CODEC=aac
OUTPUT_AUDIO_BITRATE=128k

# =============================================================================
# WEBHOOK CONFIGURATION (optional)
# =============================================================================
# Webhook URL for job completion notifications
# WEBHOOK_URL=https://your-webhook-endpoint.com/webhook
# WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# RENDER DEPLOYMENT CONFIGURATION
# =============================================================================
# These are automatically set by Render, but you can override them
# RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
# RENDER_INTERNAL_HOSTNAME=your-app-name
# RENDER_SERVICE_NAME=rapid-video-backend

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Set to true to enable API documentation
ENABLE_DOCS=true

# Set to true to enable debug endpoints
ENABLE_DEBUG_ENDPOINTS=false

# =============================================================================
# MONITORING AND ANALYTICS (optional)
# =============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics tracking ID
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# =============================================================================
# RATE LIMITING
# =============================================================================
# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Maximum requests per hour per IP
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache TTL in seconds
CACHE_TTL=3600

# Enable response caching
ENABLE_CACHING=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Enable automatic database backups
ENABLE_AUTO_BACKUP=false

# Backup interval in hours
BACKUP_INTERVAL_HOURS=24

# Number of backups to retain
BACKUP_RETENTION_COUNT=7

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable beta AI models
ENABLE_BETA_AI_MODELS=false

# Enable advanced video processing
ENABLE_ADVANCED_PROCESSING=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Number of worker processes
WORKER_PROCESSES=1

# Worker timeout in seconds
WORKER_TIMEOUT=300

# Keep alive timeout
KEEP_ALIVE_TIMEOUT=2

# Maximum worker connections
MAX_WORKER_CONNECTIONS=1000

# =============================================================================
# NOTES FOR DEPLOYMENT
# =============================================================================
# 
# 1. DEVELOPMENT SETUP:
#    - Copy this file to .env
#    - Set ENVIRONMENT=development
#    - Use SQLite database (default)
#    - Set USE_CLOUD_STORAGE=false
#    - Add your AI API keys
# 
# 2. PRODUCTION SETUP (Render):
#    - Set these as environment variables in Render dashboard
#    - Set ENVIRONMENT=production
#    - Use PostgreSQL database (Render provides DATABASE_URL)
#    - Set USE_CLOUD_STORAGE=true
#    - Configure Google Cloud Storage
#    - Add all required API keys
#    - Update ALLOWED_ORIGINS with your frontend URL
# 
# 3. REQUIRED API KEYS:
#    - GEMINI_API_KEY: Get from Google AI Studio
#    - VEO_API_KEY: Get from Veo 3 provider
#    - BANANA_API_KEY: Get from Banana.dev
#    - GOOGLE_APPLICATION_CREDENTIALS: Service account for GCS
# 
# 4. SECURITY:
#    - Change SECRET_KEY to a secure random string
#    - Never commit .env file to version control
#    - Use strong passwords for database connections
#    - Regularly rotate API keys
# 
# =============================================================================